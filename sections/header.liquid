<header class="header">
  <div class="container header__row">
    <a class="header__brand" href="{{ routes.root_url }}">
      {% if settings.logo != blank %}
        {{ settings.logo | image_url: width: 260 | image_tag: alt: shop.name, class: 'header__logo' }}
      {% else %}
        {{ shop.name }}
      {% endif %}
    </a>

    <nav class="header__nav" aria-label="Main navigation">
  <a href="/collections/all">Shop</a>

  {% assign about_page = pages['about'] %}
  <a href="{% if about_page %}{{ about_page.url }}{% else %}/pages/about{% endif %}">About</a>

  {% assign contact_page = pages['contact'] %}
  <a href="{% if contact_page %}{{ contact_page.url }}{% else %}/pages/contact{% endif %}">Contact</a>

  <a href="{{ routes.cart_url }}" class="btn btn--ghost">Cart ({{ cart.item_count }})</a>
</nav>



    <a href="{{ routes.cart_url }}" class="btn btn--ghost">Cart ({{ cart.item_count }})</a>
  </div>
</header>
